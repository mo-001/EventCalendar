@using System.Globalization
@using System.Web
@model EventCalendar.Models.Event 
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="details-form" class="form">
    <div class="details">
        <p>@Model.Title</p>
        <p>@Model.Description</p>
        <p>@Model.StartDate</p>
        <p>@Model.EndDate</p>

    </div>
    <a href="/Event/Update/@Model.Id">Update</a>
    <form method="post" asp-action="Delete" asp-route-id="@Model.Id">
        <button type="submit">Delete</button>
    </form>
</div>
