@using System.Web;
@using System.Globalization;
@model EventCalendar.Models.Event;
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div id="update-form" class="form">
    <h2>Update Form</h2>
    <form asp-for="Update" method="post">
        <input type="hidden" name="id" value="@Model.Id"/>
        <label>
            Start Date:
            <input type="datetime-local" name="start_date" id="start_date" value="@Model.StartDate.ToString("yyyy-MM-ddTHH:mm")" />
            <br/>
        </label>
        <label>
            End Date:
            <input type="datetime-local" name="end_date" id="end_date" value="@Model.EndDate.ToString("yyyy-MM-ddTHH:mm")" />
            <br />

        </label>
        <label>
            Name:
            <input asp-for="Title" name="title" value="@Model.Title"/>
            <br />

        </label>
        <label>
            Description:
            <input asp-for="Description" name="description" value="@Model.Description" />
            <br />

        </label>
        <button type="submit">Submit</button>

    </form>
</div>

